.badge {
  padding: 6px 12px;
  border-radius: 999px;
  font-size: 12px;
  font-weight: 600;
  text-align: center;
}

.pending {
  background: #fef3c7;
  color: #92400e;
}

.preparing {
  background: #dbeafe;
  color: #1e40af;
}

.ready {
  background: #dcfce7;
  color: #166534;
}

.delivered {
  background: #e5e7eb;
  color: #374151;
}

.cancelled {
  background: #fee2e2;
  color: #991b1b;
}
